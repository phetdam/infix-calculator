/**
 * @file version.h
 * @author Derek Huang
 * @brief C++ header for pdcalc versioning
 * @copyright MIT License
 */

#ifndef PDCALC_VERSION_H_
#define PDCALC_VERSION_H_

#include "pdcalc/features.h"  // for PDCALC_HAS_CC17

#if PDCALC_HAS_CC17
#include <string_view>
#endif  // PDCALC_HAS_CC17

/**
 * Project major version.
 */
#define PDCALC_MAJOR_VERSION @PDCALC_MAJOR_VERSION@

/**
 * Project minor version.
 */
#define PDCALC_MINOR_VERSION @PDCALC_MINOR_VERSION@

/**
 * Project patch version.
 */
#define PDCALC_PATCH_VERSION @PDCALC_PATCH_VERSION@

/**
 * Project version string literal.
 */
#define PDCALC_VERSION "@PDCALC_VERSION@"

#if PDCALC_HAS_CC17
namespace pdcalc {

/**
 * Version string view.
 */
inline constexpr std::string_view version{PDCALC_VERSION};

}  // namespace pdcalc
#endif  // PDCALC_HAS_CC17

/**
 * Project build type.
 */
#define PDCALC_BUILD_TYPE "@PDCALC_BUILD_TYPE@"

#if PDCALC_HAS_CC17
namespace pdcalc {

/*
 * Build type string view.
 */
inline constexpr std::string_view build_type{PDCALC_BUILD_TYPE};
}  // namespace pdcalc
#endif  // PDCALC_HAS_CC17

/**
 * Target platform system name.
 */
#define PDCALC_SYSTEM_NAME "@PDCALC_SYSTEM_NAME@"

/**
 * Target platform system version.
 */
#define PDCALC_SYSTEM_VERSION "@PDCALC_SYSTEM_VERSION@"

/**
 * Target platform system architecture.
 */
#define PDCALC_SYSTEM_ARCH "@PDCALC_SYSTEM_ARCH@"

#if PDCALC_HAS_CC17
namespace pdcalc {

/*
 * System name string view.
 */
inline constexpr std::string_view system_name{PDCALC_SYSTEM_NAME};

/**
 * System version string view.
 */
inline constexpr std::string_view system_version{PDCALC_SYSTEM_VERSION};

/**
 * System architecture string view.
 */
inline constexpr std::string_view system_arch{PDCALC_SYSTEM_ARCH};

}  // namespace pdcalc
#endif  // PDCALC_HAS_CC17

#endif  // PDCALC_VERSION_H_
